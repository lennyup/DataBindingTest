<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.databinding.lenny.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sample.BasicActivity"
            android:label="@string/title_activity_basic"/>
        <activity android:name=".sample.CustomBindingActivity"
            android:label="@string/title_activity_custom_binding"/>
        <activity android:name=".sample.IncludeActivity"
            android:label="@string/title_activity_include"/>
        <activity android:name=".sample.CollectionActivity"
            android:label="@string/title_activity_collection"/>
        <activity android:name=".sample.ResourceActivity"
            android:label="@string/title_activity_resource"/>
        <activity android:name=".sample.ObservableActivity"
            android:label="@string/title_activity_observable"/>
        <activity android:name=".sample.ViewWithIDsActivity"
            android:label="@string/title_activity_view_with_ids"/>
        <activity android:name=".sample.ViewStubActivity"
            android:label="@string/title_activity_view_stub"/>
        <activity android:name=".sample.DynamicActivity"
            android:label="@string/title_activity_dynamic"/>
        <activity android:name=".sample.AttributeSettersActivity"
            android:label="@string/title_activity_attribute_setters"/>
        <activity android:name=".sample.ConversionsActivity"
            android:label="@string/title_activity_conversions"/>
    </application>

</manifest>